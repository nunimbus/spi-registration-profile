<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.nunimbus.keycloak</groupId>
  <artifactId>spi-registration-profile</artifactId>
  <name>KEYCLOAK EXTENSIONS :: SPI registration profile</name>
  <version>0.0.1</version>
  <description>Example of a custom registration profile</description>
  <build>
    <directory>${project.basedir}/target</directory>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <outputDirectory>${build.outputDirectory}</outputDirectory>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>${attach.sources.phase}</phase>
          </execution>
        </executions>
        <configuration>
          <outputDirectory>${source.outputDirectory}</outputDirectory>
          <attach>false</attach>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.keycloak</groupId>
      <artifactId>keycloak-server-spi</artifactId>
      <version>15.0.2</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.keycloak</groupId>
      <artifactId>keycloak-server-spi-private</artifactId>
      <version>15.0.2</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.keycloak</groupId>
      <artifactId>keycloak-services</artifactId>
      <version>15.0.2</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <maven-wildfly-plugin.version>2.0.2.Final</maven-wildfly-plugin.version>
    <maven.compiler.target>11</maven.compiler.target>
    <build.outputDirectory>${project.basedir}/../../../git/sshfs-keycloak/standalone/deployments</build.outputDirectory>
    <maven.compiler.source>11</maven.compiler.source>
    <keycloak.version>15.0.2</keycloak.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven-compiler-plugin.version>3.8.1</maven-compiler-plugin.version>
    <attach.sources.phase>none</attach.sources.phase>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <source.outputDirectory>${project.basedir}/target</source.outputDirectory>
  </properties>
</project>
